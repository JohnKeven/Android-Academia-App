<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CadastroActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtNome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtCpf"
            android:layout_below="@+id/iltxtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtCpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:imeActionId="6"
                android:imeActionLabel="Idade"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtNome"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtIdade"
            android:layout_below="@+id/iltxtCpf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtIdade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Idade"
                android:imeActionId="6"
                android:imeActionLabel="Idade"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtCpf"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtContato"
            android:layout_below="@+id/iltxtIdade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contato"
                android:imeActionId="7"
                android:imeActionLabel="Contato"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtIdade"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtCidade"
            android:layout_below="@+id/iltxtContato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:imeActionId="7"
                android:imeActionLabel="Bairro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtContato"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtBairro"
            android:layout_below="@+id/iltxtCidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtBairro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bairro"
                android:imeActionId="7"
                android:imeActionLabel="Bairro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/spnCidade"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtLogadouro"
            android:layout_below="@+id/iltxtBairro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLogadouro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Logadouro"
                android:imeActionId="7"
                android:imeActionLabel="Logadouro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtBairro"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtDataCadastro"
            android:layout_below="@+id/iltxtLogadouro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtDataCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Cadastro"
                android:imeActionId="7"
                android:imeActionLabel="Data de Cadastro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtLogadouro"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtFaixa"
            android:layout_below="@+id/iltxtDataCadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnFaixa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Faixa"
                android:imeActionId="7"
                android:imeActionLabel="Bairro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtDataCadastro"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnCadastrarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iltxtFaixa"
            android:onClick="onClickCadastrarAluno"
            android:text="Cadastrar Aluno" />

    </RelativeLayout>


</ScrollView>