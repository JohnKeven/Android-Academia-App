<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:scrollbars = "vertical"
    android:scrollbarStyle="insideInset"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditarActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtNomeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtNomeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtCpfEdit"
            android:layout_below="@+id/iltxtNomeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtCpfEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF"
                android:imeActionId="6"
                android:imeActionLabel="Idade"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtNomeEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtIdadeEdit"
            android:layout_below="@+id/iltxtCpfEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtIdadeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Idade"
                android:imeActionId="6"
                android:imeActionLabel="Idade"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtCpfEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtContatoEdit"
            android:layout_below="@+id/iltxtIdadeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtContatoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contato"
                android:imeActionId="7"
                android:imeActionLabel="Contato"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtIdadeEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtCidadeEdit"
            android:layout_below="@+id/iltxtContatoEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnCidadeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cidade"
                android:imeActionId="7"
                android:imeActionLabel="Bairro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtContatoEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtBairroEdit"
            android:layout_below="@+id/iltxtCidadeEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtBairroEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bairro"
                android:imeActionId="7"
                android:imeActionLabel="Bairro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/spnCidadeEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtLogadouroEdit"
            android:layout_below="@+id/iltxtBairroEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtLogadouroEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Logadouro"
                android:imeActionId="7"
                android:imeActionLabel="Logadouro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtBairroEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtDataCadastroEdit"
            android:layout_below="@+id/iltxtLogadouroEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtDataCadastroEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Data de Cadastro"
                android:imeActionId="7"
                android:imeActionLabel="Data de Cadastro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtLogadouroEdit"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/iltxtFaixaEdit"
            android:layout_below="@+id/iltxtDataCadastroEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spnFaixaEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Faixa"
                android:imeActionId="7"
                android:imeActionLabel="Bairro"
                android:imeOptions="actionUnspecified"
                android:maxLines="1"
                android:layout_below="@+id/txtDataCadastroEdit"
                android:singleLine="true" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnEditarAluno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iltxtFaixaEdit"
            android:onClick="onClickEditarAluno"
            android:text="Editar Aluno" />

    </RelativeLayout>

</ScrollView>